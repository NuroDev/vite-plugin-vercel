{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "outDir": "dist",
    "rootDir": "./src",
    "sourceMap": true,
    "strict": true,
    "target": "es2016"
  },
  "include": ["*.ts", "src/index.ts"],
  "exclude": ["node_modules", "**/node_modules/*"]
}
